<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hofstadter">
    
    <!--HistoryList-->
    <DataTemplate x:Key="HistoryList">
        <Grid>
            <ListView
                Width="360" 
                SelectionMode="None"
                IsSwipeEnabled="False" 
                IsItemClickEnabled="True" 
                ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                ItemTemplate="{StaticResource HistoryItem}">            
            </ListView>
        </Grid>
    </DataTemplate>
    
    <!--HistoryList Item-->
    <DataTemplate x:Key="HistoryItem">
        <Grid Width="400" Height="20" Background="Red" Margin="0,0,12,0">            
            <TextBlock HorizontalAlignment="Left" Text="CityA - CityB" />
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>

